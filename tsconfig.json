{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "jsx": "react",
    "reactNamespace": "E",
    "resolveJsonModule": true,
    "lib": ["es6", "dom"]
  }
}
